<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HealthcareApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#84D07D</item>
        <item name="colorPrimaryVariant">#84D07D</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">#84D07D</item>
        <!-- Status bar color. -->
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="parentViewStyle">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/lightgreen</item>
        <item name="android:textColor"></item>
    </style>

    <style name="homeBG">
        <item name="android:background">@drawable/bh_home</item>
    </style>

    <style name="home_border">
        <item name="android:background">@drawable/border_calories</item>
    </style>

    <style name="home_text">
        <item name="android:textColor">#444444</item>
    </style>
    <style name="bg">
        <item name="android:background">#E9F4E6</item>
    </style>
    <style name="note_bg">
        <item name="android:background">@drawable/bgnote</item>
    </style>
    <style name="button_add">
        <item name="android:background">@drawable/btn_add</item>
    </style>
    <style name="add_bg">
        <item name="android:background">#fff</item>
    </style>
</resources>